<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="DevAndroid.SistemaBancarioMobile" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SistemaBancarioMobile"
        tools:ignore="ExtraText"
        tools:targetApi="31" >
        <activity
            android:name=".telaSplash"
            android:exported="false" />
        <activity
            android:name=".TelaSplash"
            android:exported="false"
            android:label="@string/title_activity_tela_splash"
            android:theme="@style/Theme.SistemaBancarioMobile" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".TelaPrincipal" />
        <activity android:name=".SaqueActivity" />
        <activity android:name=".DepositoActivity" />
        <activity android:name=".TransferenciaActivity" />
    </application>

</manifest>